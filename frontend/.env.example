# React 應用程式配置
REACT_APP_API_URL=http://localhost:5000/api
REACT_APP_SOCKET_URL=http://localhost:5000
REACT_APP_FRONTEND_URL=http://localhost:3000

# Firebase 配置
REACT_APP_FIREBASE_API_KEY=your-firebase-api-key
REACT_APP_FIREBASE_AUTH_DOMAIN=your-project.firebaseapp.com
REACT_APP_FIREBASE_PROJECT_ID=your-firebase-project-id
REACT_APP_FIREBASE_STORAGE_BUCKET=your-project.appspot.com
REACT_APP_FIREBASE_MESSAGING_SENDER_ID=your-messaging-sender-id
REACT_APP_FIREBASE_APP_ID=your-firebase-app-id
REACT_APP_FIREBASE_MEASUREMENT_ID=your-measurement-id

# YouTube 配置
REACT_APP_YOUTUBE_API_KEY=your-youtube-api-key
REACT_APP_YOUTUBE_CLIENT_ID=your-youtube-client-id

# Twitch 配置
REACT_APP_TWITCH_CLIENT_ID=your-twitch-client-id

# 支付系統配置
REACT_APP_STRIPE_PUBLISHABLE_KEY=your-stripe-publishable-key

# 應用程式設定
REACT_APP_APP_NAME=Streaming Overlay System
REACT_APP_APP_VERSION=1.0.0
REACT_APP_SUPPORT_EMAIL=support@example.com

# 功能開關
REACT_APP_ENABLE_ANALYTICS=true
REACT_APP_ENABLE_NOTIFICATIONS=true
REACT_APP_ENABLE_DARK_MODE=true

# 開發模式配置
REACT_APP_DEBUG=true
REACT_APP_LOG_LEVEL=debug

# CDN 配置 (可選)
REACT_APP_CDN_URL=https://cdn.example.com
REACT_APP_ASSETS_URL=https://assets.example.com

# 第三方服務配置
REACT_APP_GOOGLE_ANALYTICS_ID=your-ga-tracking-id
REACT_APP_SENTRY_DSN=your-sentry-dsn

# WebSocket 配置
REACT_APP_WS_RECONNECT_ATTEMPTS=5
REACT_APP_WS_RECONNECT_DELAY=1000

# 快取配置
REACT_APP_CACHE_DURATION=300000
REACT_APP_ENABLE_SERVICE_WORKER=true
